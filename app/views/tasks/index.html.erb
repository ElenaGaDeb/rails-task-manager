<h1> To Do : </h1>
<% @tasks.each do |task| %>
<p> <%= task.name %> </p>
<%= link_to "Show", task_path(task) %>
<%= link_to "Edit", edit_task_path(task) %>
<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

<% end %>

<h2> Create a new task  </h2>
<%= link_to "Create", new_task_path %>
